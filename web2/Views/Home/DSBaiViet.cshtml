
@model IList<BaiViet>
<!-- Title page -->
	<section class="bg-img1 txt-center p-lr-15 p-tb-92" style="background-image: url(/images/bg-02.jpg); margin-top: 80px">
		<h2 class="ltext-105 cl0 txt-center" style="font-family: Helvetica;">
			Danh Sách Bài Viết
		</h2>
	</section>	


	<!-- Content page -->
	<section class="bg0 p-t-62 p-b-60">
		<div class="container">
			
				<div class="col-md-8 col-lg-9 p-b-80">
					<div class="p-r-45 p-r-0-lg">
						<!-- item blog -->

						@foreach(var item in Model){
						<div class="p-b-63">
						<a class="hov-img0 how-pos5-parent" asp-controller="Home" asp-action="BaiVietChiTiet" asp-route-id="@item.ID">
								<img src="@item.Anh" alt="IMG-BLOG">
								
							</a>

							<div class="p-t-32">
								<h4 class="p-b-15">
								<a asp-controller="Home" asp-action="BaiVietChiTiet" asp-route-id="@item.ID" class="ltext-108 cl2 hov-cl1 trans-04" style="font-family: Helvetica; font-weight:bold;">
										@item.TieuDe
									</a>
								</h4>


								<div class="flex-w flex-sb-m p-t-18">


								<a asp-controller="Home" asp-action="BaiVietChiTiet" asp-route-id="@item.ID" class="stext-101 cl2 hov-cl1 trans-04 m-tb-10" style="color:gray;">
										Xem chi tiết

										<i class="fa fa-long-arrow-right m-l-9"></i>
									</a>
								</div>
							</div>
						</div>
						}
						

						
						<!-- Pagination -->
						<div class="flex-l-m flex-w w-full p-t-10 m-lr--7">
							<a href="#" class="flex-c-m how-pagination1 trans-04 m-all-7 active-pagination1">
								1
							</a>

							<a href="#" class="flex-c-m how-pagination1 trans-04 m-all-7">
								2
							</a>
						</div>
					</div>
				</div>

				
			
		</div>
	</section>	